  <!-- Main content -->
  <div class="container mt-4">
    <h2 class="text-center mb-4">Update Post</h2>
    
    <% if (posts) { %>
      <form action="/updatePost/<%= posts.id %>" method="POST" class="mx-auto" style="max-width: 500px;">
        
        <div class="mb-3">
          <label for="title" class="form-label">Post Title</label>
          <input type="text" class="form-control" id="title" name="title" value="<%= posts.title %>" required>
        </div>

        <div class="mb-3">
          <label for="description" class="form-label">Description</label>
          <textarea class="form-control" id="description" name="description" required><%= posts.description %></textarea>
        </div>

        <div class="d-grid gap-2">
          <button type="submit" class="btn btn-primary">Update Post</button>
          <a href="/homepage" class="btn btn-secondary">Back to Homepage</a>
        </div>
      </form>
    <% } else { %>
      <p class="text-center">No post found.</p>
    <% } %>
  </div>
</body>
